{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "ivanfox/client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "ivanfox/server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "ivanfox/worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "ivanfox/ngnix",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links": ["client", "server"]
         }
    ]
}